set_state() {
	local label="$1"
	local disable

	[ -e "/sys/class/gpio/${label}_power/value" ] || return

	config_get disable ${label} disable

	[ "${disable}" -eq 1 ] && \
		/sbin/mctl -s -c -m "${label}" || \
		/sbin/mctl -p -c -m "${label}"
}

do_power_modem() {
	[ -f /etc/board.json ] || return

	[ -z "$(uci -q get system.modem.disable)" ] && /sbin/mctl -p -c -a || {
		config_load system
		config_foreach set_state mctl
	}
}

boot_hook_add preinit_main do_power_modem
