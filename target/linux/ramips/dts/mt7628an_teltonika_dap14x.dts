/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,dap14x", "mediatek,mt7628an-soc";
	model = "Teltonika DAP14X";

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock5";
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};
	};

	leds {
		compatible = "gpio-leds";

		power_led {
			label = "power_led";
			gpios = <&gpio 44 GPIO_ACTIVE_HIGH>;
			tlt-mnf,device = "DAP140", "DAP142";
			default-state = "on";
			retain-state-shutdown;
		};

		power_led@1 {
			label = "power_led";
			gpios = <&gpio 4 GPIO_ACTIVE_HIGH>;
			tlt-mnf,device = "DAP145";
			default-state = "on";
			retain-state-shutdown;
		};

		eth1_led {
			label = "eth1_led";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		wan_led {
			label = "wan_led";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};
	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		misc {
			GPIO_38 {
				line_name = "GPIO_RS485_RX_EN";
				compatible_model = "DAP145";
			};
			GPIO_44 {
				line_name = "GPIO_RS485_D_EN";
				compatible_model = "DAP145";
			};
		};
	};
};

&state_default {
	gpio {
		groups = "i2s", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			config: partition@20000 {
				compatible = "nvmem-cells";
				#address-cells = <1>;
				#size-cells = <1>;

				label = "config";
				reg = <0x020000 0x010000>;
				read-only;

				macaddr_config_0: macaddr@0 {
					reg = <0x0 0x6>;
				};
			};

			factory: partition@30000 {
				label = "factory";
				reg = <0x030000 0x030000>;
				read-only;
			};

			partition@60000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x060000 0xf10000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x90000>;
			};
		};
	};
};

&mnfinfo {
	sim_count {
		default =  "0";
	};
};

&wmac {
	status = "okay";
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
	mac-address-increment = <2>;
	mediatek,mtd-eeprom = <&factory 0x20000>;
};

&ethernet {
	nvmem-cells = <&macaddr_config_0>;
	nvmem-cell-names = "mac-address";
};

&esw {
	mediatek,portmap = <0x3e>;
};

&uart1 {
	linux,rs485-enabled-at-boot-time;
	rs485-rts-delay = <0 0>;
	rs485-rx-during-tx;
	rts-gpios = <&gpio 44 GPIO_ACTIVE_HIGH>;
	status = "okay";
};
