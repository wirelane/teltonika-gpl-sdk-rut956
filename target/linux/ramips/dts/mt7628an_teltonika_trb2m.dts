/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include "mt7628an.dtsi"
#include "platform_name.dtsi"

/ {
	compatible = "teltonika,trb2m", "mediatek,mt7628an-soc";
	model = "Teltonika TRB2M";

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_status {
			gpio-export,name = "modem_status";
			gpios = <&gpio 16 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 2 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <0>;
			gpios = <&gpio 3 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <1>;
			gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
		};

		gpio_rs485_rx_en {
			gpio-export,name = "rs485_rx_en";
			gpio-export,output = <0>;
			gpios = <&gpio 5 GPIO_ACTIVE_HIGH>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&gpio 22 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		eth_led {
			label = "eth_led";
			gpios = <&gpio 43 GPIO_ACTIVE_LOW>;
		};

		led_power {
			label = "power";
			gpios = <&gpio 29 GPIO_ACTIVE_LOW>;
			default-state = "on";
		};

		led_gen_2 {
			label = "mob_gen_2";
			gpios = <&gpio 11 GPIO_ACTIVE_HIGH>;
		};

		led_gen_3 {
			label = "mob_gen_3";
			gpios = <&gpio 1 GPIO_ACTIVE_HIGH>;
		};

		led_gen_4 {
			label = "mob_gen_4";
			gpios = <&gpio 42 GPIO_ACTIVE_LOW>;
		};

		led_ssid_1 {
			label = "mob_ssid_1";
			gpios = <&gpio 39 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_3 {
			label = "mob_ssid_3";
			gpios = <&gpio 40 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

		led_ssid_5 {
			label = "mob_ssid_5";
			gpios = <&gpio 41 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "timer";
		};

	};

	tlt_gpios { // Modify according to wiki page "DTS syntax with Libgpiod changes"
		gpiochip_info {
			hw_0 {
				hwver = <0>;
				gpiochip_count = <3>;

				gpiochip_0 = <32>; // Built-in
				gpiochip_1 = <32>; // Built-in
				gpiochip_2 = <32>; // Built-in
			};
		};

		ioman {
			GPIO_24 {
				line_name = "GPIO_IN_1";
			};
			GPIO_44 {
				line_name = "GPIO_OUT_1";
			};
			GPIO_27 {
				line_name = "GPIO_IN_2";
			};
			GPIO_38 {
				line_name = "GPIO_OUT_2";
			};
			GPIO_14 {
				line_name = "GPIO_IN_3";
			};
			GPIO_37 {
				line_name = "GPIO_OUT_3";
			};
		};

		ledman {
			GPIO_29 {
				line_name = "LED_POWER";
				active_low;
			};
			GPIO_43 {
				line_name = "LED_ETH_GREEN_1";
				active_low;
			};
			GPIO_11 {
				line_name = "LED_TECH_GEN_2";
			};
			GPIO_1 {
				line_name = "LED_TECH_GEN_3";
			};
			GPIO_42 {
				line_name = "LED_TECH_GEN_4";
				active_low;
			};
			GPIO_39 {
				line_name = "LED_SSID_1";
			};
			GPIO_40 {
				line_name = "LED_SSID_3";
			};
			GPIO_41 {
				line_name = "LED_SSID_5";
			};
		};

		misc {
			GPIO_2 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_3 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_16 {
				line_name = "GPIO_MODEM_STATUS_1";
			};
			GPIO_0 {
				line_name = "GPIO_SIM_SELECT";
				active_low;
			};
			GPIO_5 {
				line_name = "GPIO_RS485_RX_EN";
			};
		};
	};
};

&mnfinfo {
	simpin1 {
		default = "";
	};

	simpin2 {
		default = "";
	};

	sim_count {
		default =  "2";
	};
};

&state_default {
	gpio {
		groups = "i2s", "p4led_an", "p3led_an", "p2led_an", "p1led_an", "p0led_an", "gpio", "wled_an", "perst", "refclk", "wdt", "i2c";
		function = "gpio";
	};
};

&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <10000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			boot: partition@0 {
				label = "u-boot";
				reg = <0x0 0x20000>;
				read-only;
			};

			config: partition@20000 {
				label = "config";
				reg = <0x020000 0x010000>;
				read-only;
			};

			partition@30000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x030000 0xf40000>;
			};

			partition@f70000 {
				label = "event-log";
				reg = <0xf70000 0x90000>;
			};
		};
	};
};

&ethernet {
	mtd-mac-address = <&config 0x0>;
};

&uart1 {
	status = "okay";
	linux,rs485-enabled-at-boot-time;
	rs485-rts-delay = <0 0>;
	rs485-rx-during-tx;
	rts-gpios = <&gpio 4 GPIO_ACTIVE_HIGH>;
};

&uart2 {
	status = "okay";
};
