#include "common-mt7621/rutm.dtsi"
#include "common-mt7621/eth/1-lan-port.dtsi"
#include "common-mt7621/tpm.dtsi"

// PWR, RST |G0|G10|
// IN, OUT  |G5|G9|G14|G17|
// ETH      |G41|G42|G43|G45|
// 4G		|G7|G8|G12|G13|G15|G16|G46-G48|
// MISC     |G6|
/ {
	model = "Teltonika RUTM30";

	gpio-export {
		compatible = "gpio-export";
		#size-cells = <0>;

		gpio_modem_reset {
			gpio-export,name = "modem_reset";
			gpio-export,output = <0>;
			gpios = <&gpio 13 GPIO_ACTIVE_HIGH>;
		};

		gpio_modem_power {
			gpio-export,name = "modem_power";
			gpio-export,output = <1>; // tmp
			gpios = <&gpio 15 GPIO_ACTIVE_HIGH>;
		};

		gpio_sim_select {
			gpio-export,name = "sim_sel";
			gpio-export,output = <0>;
			gpios = <&gpio 16 GPIO_ACTIVE_HIGH>;
		};

		gpio_tpm_reset {
			gpio-export,name = "tpm_reset";
			gpio-export,output = <1>;
			gpios = <&gpio 6 GPIO_ACTIVE_HIGH>;
		};
	};

	leds {
		led_gen_red {
			label = "mob_gen_red";
			gpios = <&gpio 12 GPIO_ACTIVE_LOW>;
		};

		led_gen_green {
			label = "mob_gen_green";
			gpios = <&gpio 8 GPIO_ACTIVE_LOW>;
		};

		led_gen_blue {
			label = "mob_gen_blue";
			gpios = <&gpio 7 GPIO_ACTIVE_LOW>;
		};

		led_ssid_red {
			label = "mob_ssid_red";
			gpios = <&gpio 46 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "timer";
		};

		led_ssid_green {
			label = "mob_ssid_green";
			gpios = <&gpio 48 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "timer";
		};

		led_ssid_blue {
			label = "mob_ssid_blue";
			gpios = <&gpio 47 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "timer";
		};
	};

	tlt_gpios {
		gpiochip_info {
			hw_0 {
				gpiochip_count = <3>;
				/delete-property/ gpiochip_3;
			};
		};

		ioman {
			GPIO_5 {
				line_name = "GPIO_OUT_1";
			};
			GPIO_14 {
				line_name = "GPIO_IN_1";
				active_low;
			};
			GPIO_9 {
				line_name = "GPIO_OUT_2";
			};
			GPIO_17 {
				line_name = "GPIO_IN_2";
				active_low;
			};
		};

		misc {
			GPIO_13 {
				line_name = "GPIO_MODEM_RESET_1";
			};
			GPIO_15 {
				line_name = "GPIO_MODEM_POWER_1";
			};
			GPIO_16 {
				line_name = "GPIO_SIM_SELECT";
			};
			GPIO_6 {
				line_name = "GPIO_TPM_RESET";
			};
		};
	};

	ioman {
		layout@0 {
			io@0 { // 4pin #3
				label = "dio0";
				block_type = BLOCK_4PIN;
				block_pin = "3";
				default_direction = "out";
				gpio_in = "GPIO_IN_1";
				gpio_out = "GPIO_OUT_1";
				io_param = "g0";
			};
			io@1 { // 4pin #4
				label = "dio1";
				block_type = BLOCK_4PIN;
				block_pin = "4";
				default_direction = "in";
				gpio_in = "GPIO_IN_2";
				gpio_out = "GPIO_OUT_2";
				io_param = "g1";
			};
		};
	};
};

&mnfinfo {
	sim_cfg {
		default = "1111100_1112000_1121200";
	};
};

&gmac1 {
	phy-handle = <&ethphy0>;
};

&ethphy0 {
	/delete-property/ interrupts;
};
